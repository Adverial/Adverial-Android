<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="14dp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_circle"
        android:color="@color/menu_text"
        android:src="@drawable/logo_dark" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/last_message_time"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_toRightOf="@id/imageViewAvatar"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/textViewChatPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Partner Name"
            android:textColor="@color/menu_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_message"
            android:textColor="@color/light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last message content"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/last_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Last message time"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>